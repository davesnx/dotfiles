{
  "atomKeymap.promptV3Features": true,
  "breadcrumbs.enabled": true,

  "window.nativeTabs": true,
  "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
  "window.zoomLevel": 2,

  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "Ayu Mirage",
  "workbench.editor.tabSizing": "shrink",
  "workbench.fontAliasing": "auto",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",

  "editor.autoIndent": true,
  "editor.colorDecorators": false,
  "editor.cursorBlinking": "phase",
  "editor.detectIndentation": true,
  "editor.fontFamily": "SF Mono, Fira Code, Droid Sans Mono, Monaco",
  "editor.fontSize": 13,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.insertSpaces": true,
  "editor.lineHeight": 21,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "none",
  "editor.rulers": [
    80,
    120
  ],
  "editor.snippetSuggestions": "top",
  "editor.suggestFontSize": 12,
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.useTabStops": true,
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\\\|;:'\\\",.<>/?",
  "editor.wrappingIndent": "indent",

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": true,

  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  "eslint.alwaysShowStatus": true,
  "eslint.autoFixOnSave": true,
  "eslint.lintTask.enable": true,
  "eslint.packageManager": "yarn",
  "eslint.validate": [
    {
      "language": "javascript",
      "autoFix": true
    },
    {
      "language": "javascriptreact",
      "autoFix": true
    }
  ],

  "files.associations": {
    "*.jsx": "javascriptreact",
    "*.js": "javascriptreact"
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
    "suppressResultsExplorerNotice": false,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": true,
    "suppressWelcomeNotice": false
  },
  "gitlens.advanced.telemetry.enabled": false,
  "gitlens.advanced.useSymmetricDifferenceNotation": false,
  "gitlens.blame.separateLines": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.annotations.changes": false,
  "gitlens.hovers.annotations.enabled": false,
  "gitlens.hovers.avatars": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.keymap": "alternate",
  "gitlens.showWhatsNewAfterUpgrades": false,
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "gitlens.views.repositories.includeWorkingTree": false,

  "html.format.enable": true,
  "html.format.preserveNewLines": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "reason_language_server.dependencies_codelens": true,
  "reason_language_server.refmt": "/Users/davidsancho/.config/yarn/global/node_modules/.bin/refmt",
  "reason_language_server.reloadOnChange": true,
  "reason_language_server.useOldDuneProcess": false,
  "search.exclude": {
    "**/.git": true,
    "**/.next": true,
    "**/build": true,
    "**/dist": true,
    "**/node_modules": true
  },
  "typescript.check.npmIsInstalled": false,

  // Language specific
  "[javascriptreact]": {
    "editor.defaultFormatter": "numso.prettier-standard-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "numso.prettier-standard-vscode"
  },
  "[reason]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "jaredly.reason-vscode"
  }
}
