{
  "atomKeymap.promptV3Features": true,
  "breadcrumbs.enabled": false,

  "window.nativeTabs": true,
  "window.title": "${dirty} ${activeEditorMedium}${separator}${rootName}",
  "window.zoomLevel": 2,

  "workbench.activityBar.visible": true,
  "workbench.colorTheme": "Ayu Mirage",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.fontAliasing": "auto",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",

  "editor.autoIndent": "brackets",
  "editor.colorDecorators": false,
  "editor.cursorBlinking": "phase",
  "editor.cursorStyle": "block",
  "editor.detectIndentation": true,
  "editor.fontFamily": "SF Mono, Fira Code, Droid Sans Mono, Monaco",
  "editor.fontSize": 13,
  "editor.formatOnPaste": false,
  "editor.formatOnSave": false,
  "editor.insertSpaces": true,
  "editor.lineHeight": 24,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.scrollPredominantAxis": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    80,
    120
  ],
  "editor.suggestFontSize": 12,
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.useTabStops": true,
  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\\\|;:'\\\",.<>/?",
  "editor.wrappingIndent": "indent",
  "editor.wordWrap": "on",
  "editor.snippetSuggestions": "bottom",

  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,
  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": true,

  "emmet.showSuggestionsAsSnippets": true,
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },

  "workbench.colorCustomizations": {
    "statusBarItem.remoteBackground": "#5a34a0",
    "statusBarItem.remoteForeground": "#fff"
  },

  "files.associations": {
    "*.jsx": "javascriptreact",
    "*.js": "javascriptreact"
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/_build/**": true,
    "**/_opam/**": true,
    "**/esy.lock/**": true,
    "**/_esy/**": true,
    "**/lib/bs/**": true,
    "**/lib/js/**": true,
    "**/lib/ocaml/**": true,
    "**/*.bs.js": true,
    "**/rust/target/**": true
  },

  "remote.SSH.remoteServerListenOnSocket": true,
  "remote.SSH.remotePlatform": {
    "febox1": "linux"
  },
  "remote.SSH.configFile": "/Users/davesnx/.ssh/config",

  "gitlens.advanced.messages": {
    "suppressCommitHasNoPreviousCommitWarning": false,
    "suppressCommitNotFoundWarning": false,
    "suppressFileNotUnderSourceControlWarning": false,
    "suppressGitVersionWarning": false,
    "suppressLineUncommittedWarning": false,
    "suppressNoRepositoryWarning": false,
  },
  "gitlens.blame.separateLines": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.annotations.changes": false,
  "gitlens.hovers.annotations.enabled": false,
  "gitlens.hovers.avatars": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.keymap": "alternate",
  "gitlens.showWhatsNewAfterUpgrades": false,
  "gitlens.views.repositories.includeWorkingTree": false,

  "tabnine.experimentalAutoImports": true,

  "search.exclude": {
    "**/.git": true,
    "**/.vscode": true,
    "**/.next": true,
    "**/build": true,
    "**/dist": true,
    "**/node_modules": true,
    "**/_esy": true,
    "**/esy.lock": true,
    "**/_opam": true,
    "**/_build": true
  },

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },

  /* "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.re$",
        "isAsync": true,
        "cmd": "yarn bsrefmt --in-place -w 120 ${file}"
      }
    ]
  }, */
  "html.format.enable": true,
  "html.format.preserveNewLines": true,
  "html.format.indentInnerHtml": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.check.npmIsInstalled": false,
  "[javascript]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[reason]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "ocamllabs.ocaml-platform"
  },
  "peacock.affectDebuggingStatusBar": true,
  "security.workspace.trust.untrustedFiles": "open"
}
